<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Child Name -->
    <TextView
        android:id="@+id/textChildName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Child Name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_edit_child"
        app:layout_constraintBottom_toTopOf="@id/textChildAge"
        android:ellipsize="end"
        android:singleLine="true"/>

    <!-- Child DOB, deleted-->

    <!-- Edit Button -->

    <TextView
        android:id="@+id/textChildAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textColor="#555555"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_edit_child"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textChildName" />

    <Button
        android:id="@+id/btn_edit_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        app:layout_constraintEnd_toStartOf="@id/btn_delete_child"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- child home button-->
    <Button
        android:id="@+id/btn_child_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Child's Home"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="114dp" />


    <!-- Delete Button -->
    <Button
        android:id="@+id/btn_delete_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintEnd_toStartOf="@id/btn_share_settings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="4dp"/>

    <!-- Share Settings Button -->
    <Button
        android:id="@+id/btn_share_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="4dp"/>

    <!-- Daily Check-in Button -->
    <Button
        android:id="@+id/btn_daily_check_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Check-in"
        app:layout_constraintTop_toBottomOf="@id/btn_share_settings"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
