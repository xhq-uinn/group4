<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Child Name -->
    <TextView
        android:id="@+id/textChildName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Child Name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_edit_child"
        app:layout_constraintBottom_toTopOf="@id/textChildAge"
        android:ellipsize="end"
        android:singleLine="true"/>

    <!-- Child DOB -->
    <TextView
        android:id="@+id/textChildAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textSize="14sp"
        android:textColor="#555555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textChildName"
        app:layout_constraintEnd_toStartOf="@id/btn_edit_child"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Edit Button -->
    <Button
        android:id="@+id/btn_edit_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        app:layout_constraintEnd_toStartOf="@id/btn_delete_child"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Delete Button -->
    <Button
        android:id="@+id/btn_delete_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintEnd_toStartOf="@id/btn_share_settings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="4dp"/>

    <!-- Share Settings Button -->
    <Button
        android:id="@+id/btn_share_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>