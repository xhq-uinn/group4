<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Smart Air!"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- Section 1: App Purpose -->
        <TextView
            android:id="@+id/purposeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is Smart Air?"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#3F51B5"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/purposeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Smart Air helps children understand asthma, learn correct inhaler techniques, and record symptoms and medication use in a fun, easy way."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

        <!-- Section 2: Rescue vs Controller -->
        <TextView
            android:id="@+id/rescueTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rescue vs Controller"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#3F51B5"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/rescueText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rescue inhalers provide quick relief when symptoms appear, while controller inhalers are taken daily to prevent attacks."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

        <!-- Section 3: Privacy and Sharing -->
        <TextView
            android:id="@+id/privacyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy and Sharing"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#3F51B5"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/privacyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parents can control what data is shared with healthcare providers. Providers can only see reports that parents approve."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="40dp" />

        <!-- Finish Button -->
        <Button
            android:id="@+id/finishButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#3F51B5"
            android:text="Continue to Home"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>