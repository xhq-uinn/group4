<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share with Provider"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <CheckBox
                android:id="@+id/cbRescueLogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rescue logs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <CheckBox
                android:id="@+id/cbController"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Controller adherence" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <CheckBox
                android:id="@+id/cbSymptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Symptoms" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <CheckBox
                android:id="@+id/cbTriggers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Triggers" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <CheckBox
                android:id="@+id/cbPeakFlow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peak-flow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <CheckBox
                android:id="@+id/cbTriage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Triage incidents" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <CheckBox
                android:id="@+id/cbSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Summary charts" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>