<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Child Name Header -->
    <TextView
        android:id="@+id/childNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Child's Medicine Log"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/buttonRescueLogs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rescue Logs"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonControllerLogs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Controller Logs" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Log New Dose"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <!-- Type Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type:"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/medicineTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:entries="@array/medicine_types" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine:"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/medicineSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/customMedicineInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Medicine Name"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dose Count:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/doseCountInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of puffs/measures"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSubmitLog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Submit Log"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/buttonRateLastDose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rate Last Dose" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonFlagLow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flag Medicine as Low"
        android:visibility="gone"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/logsHeaderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RECENT RESCUE/CONTROLLER LOGS"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/logsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="12dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/noLogsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No logs yet"
        android:gravity="center"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_marginTop="0dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <Button
        android:id="@+id/buttonHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="24sp"
        android:layout_marginBottom="0dp" />

</LinearLayout>