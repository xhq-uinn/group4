<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/text_history_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History Browser"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Date Range -->
        <EditText
            android:id="@+id/edit_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start date (e.g., Nov/01/2025)"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End date (e.g., Nov/30/2025)"
            android:layout_marginBottom="16dp" />

        <!-- Symptoms -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptoms"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/check_symptom_nightwaking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Night waking" />

        <CheckBox
            android:id="@+id/check_symptom_activitylimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity limit" />

        <CheckBox
            android:id="@+id/check_symptom_coughwheeze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cough/Wheeze" />

        <!-- Triggers -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Triggers"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/check_trigger_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise" />

        <CheckBox
            android:id="@+id/check_trigger_coldair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cold air" />

        <CheckBox
            android:id="@+id/check_trigger_dustpets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dust/Pets" />

        <CheckBox
            android:id="@+id/check_trigger_smoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smoke" />

        <CheckBox
            android:id="@+id/check_trigger_illness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Illness / cold" />

        <CheckBox
            android:id="@+id/check_trigger_odors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfume / cleaners / strong odors" />

        <!-- Filter Button -->
        <Button
            android:id="@+id/button_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Filters"
            android:layout_marginTop="16dp"/>

        <!-- Results -->
        <LinearLayout
            android:id="@+id/layout_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"/>

        <!-- Export Button -->
        <Button
            android:id="@+id/button_export_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export as PDF"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</ScrollView>
