<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".TechniqueHelperActivity">

    <TextView
        android:id="@+id/tvStepTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Step 1: Loading..."
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvStepDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:text="Description will load here."
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvStepTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvCountdown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="28sp"
        android:textStyle="italic"
        android:text="Hold/Wait: 10s"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvStepDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/videoStep"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        app:use_controller="true"
        app:layout_constraintTop_toBottomOf="@id/tvCountdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:resize_mode="fit" />

    <LinearLayout
        android:id="@+id/llTechniqueQuality"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/videoStep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnHighQuality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes, High Quality (Next Step)"
            android:backgroundTint="#673AB7"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnNeedAssistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Low Quality (Next Step)"
            android:padding="16dp"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnRestart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Restart from Step 5"
        android:padding="16dp"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/videoStep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnFinish"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Finish and Save"
        android:backgroundTint="#4CAF50"
        android:padding="16dp"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/videoStep"
        app:layout_constraintStart_toEndOf="@+id/btnRestart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"/>


</androidx.constraintlayout.widget.ConstraintLayout>